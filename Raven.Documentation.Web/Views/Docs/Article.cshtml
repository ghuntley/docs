@using Raven.Documentation.Web.Helpers
@model Raven.Documentation.Web.Models.ArticleModel
@{
    ViewBag.Title = Model.Title;
}
@section scripts {
    <script type="text/javascript">
        $('#article table').addClass('table table-hover table-condensed table-bordered');
    </script>
}
<div id="article">
    <div class="row">
        <div class="col-md-3">
            @Html.GenerateTableOfContents(Url, Model.TableOfContents, Model.Key)
        </div>
        <div class="col-md-9">
            @Html.Raw(Model.HtmlContent)
        </div>
    </div>
</div>

